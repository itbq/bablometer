@model NewsItemModel
@using Nop.Web.Models.News;

@{
    Layout = "_RootNoScript";
    Html.AppendTitleParts(Model.Title);
}
<div class="master-wrapper-page">
    <div class="master-wrapper-content">
        <div class="master-wrapper-main">
            <div class="master-wrapper-whiteboard">
                <div class="leftSide newsSingle">
                    <div class="goBack">
                    @if (Request.UrlReferrer != null && Request.UrlReferrer.ToString().IndexOf("news") > 0)
                        {
                            <a href="@Request.UrlReferrer.ToString()">&larr; @T("News.Back")</a>
                        }else
                        {
                            <a href="/news">&larr; @T("News.Back")</a>
                        }
                    </div>
                    <h1>@Model.Title</h1>
                    <div class="newsBoxOuter" >
                        <div class="newsHeading">
                            <p class="left">@Model.PublishingDate.Value.Date.ToString("D")</p>
                            <div class="right">
                                @T("ETF.Front.Product.Details.ShareThis"):@Html.Action("ShareButton", "Common", new {product = false })
                            </div>
                        </div>
                        @if(Model.CatalogPictureId != 0)
                        {
                            <div class="newsBoxInner">
                                <img src="@Model.CatalogPicture.ImageUrl" alt="@Model.Title" />
                            </div>
                        }
                    </div>
                    <div class="aboutBlockOuter">
                        <div class="aboutBlockInner">
                            @Html.Raw(Model.Full)
                        </div>
                    </div>

                </div>
                <div class="rightSide">

                    @Html.Action("Banners","Common")
                </div>
            </div>

        </div> </div>
</div>