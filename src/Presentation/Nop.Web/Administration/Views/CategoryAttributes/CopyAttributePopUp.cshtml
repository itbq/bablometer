@{
    Layout = "~/Administration/Views/Shared/_AdminPopupLayout.cshtml";
}
@model CategoryAttributeCopyModel
@{    
    //page title
    ViewBag.Title = T("Admin.Catalog.CategoryProductAttributeValueModel.Attributes.Values.AddNew").Text;
}
@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(ViewBag.formId)'].@(ViewBag.btnId).click();}
        catch (e){} 
        window.close();
    </script>
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.CategoryProductAttribute.Copy")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
        </div>
    </div>
    <table class="adminContent">
        <tr>
            <td class="adminTitle">
                @Html.LabelFor(model=>model.CategoryProductAttributeGroupId)
            </td>
            <td class="adminData">
                @Html.DropDownListFor(model=>model.CategoryProductAttributeGroupId,Model.AviableGroups)
                @Html.ValidationMessageFor(model=>model.CategoryProductAttributeGroupId)
            </td>
        </tr>
        <tr>
            <td>
                @Html.HiddenFor(model=>model.CategoryProductAttributeId)
            </td>
        </tr>
    </table>
}