@model CategoryProductAttributeGroupModel
@{  
    //page title
    ViewBag.Title = T("Admin.Catalog.Attributes.CategoryProductAttributeGroupModel.EditAttributeDetails").Text;
}
@using (Html.BeginForm("Edit", "CategoryAttributes", FormMethod.Post, new {id="productattribute-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Attributes.CategoryProductAttributeGroupModel.EditAttributeDetails") - @Model.Name @Html.ActionLink("(" + T("Admin.Catalog.Attributes.CategoryProductAttributeGroupModel.BackToList") + ")", "List")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="categoryproductattributegroup-delete" class="t-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("categoryproductattributegroup-delete")