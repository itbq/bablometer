@model IList<Nop.Web.Models.News.NewsItemModel>

<h4>@T("News.LatestNews")</h4>
<div class="separateLine">
    @if(Model.Count > 0)
    {
        <a href="@Url.RouteUrl("SellerNews", new { seName = Model[0].CompanySeName })" class="seeAll littleSeeAll">@T("SeeAll.Lower")</a>
    }
</div>

<div class="lateNews">
    @foreach(var newItem in Model)
    {
        <div class="newsBox">
            <a href="@Url.RouteUrl("NewsItem", new { SeName = newItem.SeName })" class="newsHeadline">@newItem.Title</a>
            <div class="publicLatestNews"><div class="imgNews">
                <div class="cornerRight"></div>
                <div class="newsDate">@newItem.PublishingDate.Value.ToString("d")</div>
                @if(newItem.Picture != null){<a href="@Url.RouteUrl("NewsItem", new { SeName = newItem.SeName })"><img src="@newItem.Picture.ImageUrl" alt="@newItem.Title"></a>}
            </div></div>
            <p class="newsText">@Html.Raw(newItem.Short)</p>
        </div>
    }
</div>