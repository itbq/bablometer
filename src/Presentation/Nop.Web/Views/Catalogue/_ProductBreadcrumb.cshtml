@model ProductDetailsModel.ProductBreadcrumbModel
@using Nop.Web.Models.Catalog;
<ul class="breadcrumb">
    @for (int i = 0; i < Model.CategoryBreadcrumb.Count; i++)
    {
        var catBr = Model.CategoryBreadcrumb[i];
        <li>
            <div class="tail"></div>
            @Html.Raw("<a class=\"itemName\" href=\"" + "/Catalogue/" + Model.ProductItemTypeAnchor + "/" + catBr.SeName + "\">" + catBr.Name + "</a>")
            <div class="head"></div>
        </li>
    }
    @*uncomment to disable clickable link
    <li>
        <div class="tail"></div>
        <a href="javascript:retrun false;" style="text-decoration: none !important">
            <strong>@Model.ProductName </strong></a>
        <div class="head"></div>
    </li>
    <li>
        <strong>
            <div class="tail"></div>
            <a href="@Url.RouteUrl("Product", new { SeName = Model.ProductSeName })">@Model.ProductName</a><div class="head"></div>
        </strong>
    </li>*@
</ul>

